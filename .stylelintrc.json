{
	"extends": "stylelint-config-htmlacademy",
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-order" : [
			
			"position", "top", "right", "bottom", "left",
			"z-index", 
			
			"display", "float", 
			"flex-direction", "flex",
			"grid-template", "grid-template-rows", "grid-template-columns",
			"gap", "column-gap", "row-gap",
			"flex-grow", "flex-wrap",
			"justify-content", "align-items", "align-self",
			"align-content",
			"width", "max-width", "min-width",
			"height", "max-height", "min-height",
			"margin", "margin-top", "margin-right", "margin-bottom", "margin-left",
			"padding", "padding-top", "padding-right", "padding-bottom", "padding-left",
			"box-sizing",
			
			"font", "font-style", "font-size", "line-height",
			"letter-spacing",
			"font-family", "text-align", "color",
			"text-decoration", "overflow", "word-break",
			
			"background",
			"background-image",
			"background-color", "border", 
			"border-top", "border-right", "border-bottom",
			"border-left",
			"border-color",
			"border-radius",
			"box-shadow",
			"outline", "outline-style", "outline-color",
			"opacity", "text-transform", "resize",
			
			"transition", "transform", "animation", "animation-name", "animation-duration",
			
			"content", "cursor", "will-change"
		]
	}
}
